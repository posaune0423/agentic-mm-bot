# =============================================================================
# agentic-mm-bot Environment Variables
# =============================================================================
# Copy this file to .env and fill in the values.
# For local development, DATABASE_URL can be used as-is (docker-compose).

# -----------------------------------------------------------------------------
# Database (Required for all apps)
# -----------------------------------------------------------------------------
DATABASE_URL=postgres://postgres:postgres@localhost:5432/postgres

# -----------------------------------------------------------------------------
# Logging
# -----------------------------------------------------------------------------
LOG_LEVEL=INFO
LOG_DIR=./logs

# -----------------------------------------------------------------------------
# Application Environment
# -----------------------------------------------------------------------------
APP_ENV=development

# -----------------------------------------------------------------------------
# Trading Configuration
# -----------------------------------------------------------------------------
EXCHANGE=extended
SYMBOL=BTC-USD

# -----------------------------------------------------------------------------
# Extended Exchange (Required for ingestor/executor)
# -----------------------------------------------------------------------------
EXTENDED_NETWORK=testnet
EXTENDED_API_KEY=your-api-key
EXTENDED_STARK_PRIVATE_KEY=your-stark-private-key
EXTENDED_STARK_PUBLIC_KEY=your-stark-public-key
EXTENDED_VAULT_ID=12345

# -----------------------------------------------------------------------------
# Ingestor Configuration
# -----------------------------------------------------------------------------
BBO_THROTTLE_MS=100
BBO_MIN_CHANGE_BPS=1
LATEST_TOP_UPSERT_INTERVAL_MS=1000

# -----------------------------------------------------------------------------
# Executor Configuration
# -----------------------------------------------------------------------------
TICK_INTERVAL_MS=200
STATE_PERSIST_INTERVAL_MS=10000
EVENT_FLUSH_INTERVAL_MS=1000

# -----------------------------------------------------------------------------
# Summarizer Configuration
# -----------------------------------------------------------------------------
RUN_INTERVAL_MS=60000

# -----------------------------------------------------------------------------
# Backtest Configuration
# -----------------------------------------------------------------------------
START_TIME=2025-01-01T00:00:00Z
END_TIME=2025-01-02T00:00:00Z

# -----------------------------------------------------------------------------
# LLM Reflector Configuration (Future Extension)
# -----------------------------------------------------------------------------
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4o
