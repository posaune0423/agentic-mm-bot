{
  "name": "@agentic-mm-bot/summarizer",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "dotenvx run -f ../../.encrypted.local -fk ../../.env.keys -- bun run --hot src/main.ts",
    "start": "dotenvx run -f ../../.encrypted.local -fk ../../.env.keys -- bun run src/main.ts",
    "format": "prettier --check . --experimental-cli --experimental-ternaries",
    "format:fix": "prettier --write . --experimental-cli --experimental-ternaries",
    "lint": "eslint . --max-warnings 0",
    "lint:fix": "eslint . --fix",
    "typecheck": "tsgo --noEmit",
    "test": "dotenvx run -f ../../.encrypted.local -fk ../../.env.keys -- bun test"
  },
  "dependencies": {
    "@agentic-mm-bot/db": "workspace:*",
    "@agentic-mm-bot/repositories": "workspace:*",
    "@agentic-mm-bot/utils": "workspace:*",
    "@t3-oss/env-core": "catalog:tooling",
    "drizzle-orm": "catalog:",
    "neverthrow": "^8.2.0",
    "pg": "^8.16.3",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@agentic-mm-bot/eslint-config": "workspace:*",
    "@agentic-mm-bot/prettier-config": "workspace:*",
    "@agentic-mm-bot/typescript-config": "workspace:*",
    "@dotenvx/dotenvx": "catalog:tooling",
    "@types/bun": "catalog:tooling",
    "@types/pg": "^8.16.0",
    "@typescript/native-preview": "catalog:tooling",
    "eslint": "catalog:tooling",
    "typescript": "catalog:tooling"
  },
  "prettier": "@agentic-mm-bot/prettier-config"
}
